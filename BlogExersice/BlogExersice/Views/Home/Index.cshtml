@{
    ViewBag.Title = "Home Page";
}

@model List<BlogExersice.Models.Post>

<section class="row">
    @foreach (var post in Model)
    {
        <article class="post col-md-6">
            <h2 class="title">@post.Title</h2>
            <div class="about">
                Posted
                @if (post.Author != null)
                {
                    @:by
                    <i>@post.Author.FullName (@post.Author.UserName)</i>
                }
                on <i>@post.Date</i>
            </div>
            <div class="body">@Html.Raw(post.Body)</div>
        </article>
    }

</section>