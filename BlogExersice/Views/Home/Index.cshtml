@{
    ViewBag.Title = "Home Page";
}

@model List<BlogExersice.Models.Post>

<section class="row">
    @foreach (var post in Model)
    {
        <article class="post col-md-6">
            <h2 class="title">@post.Title</h2>
            <div class="about">
                Създаден
             @if (@post.Author != null)
             {
                @post.Author.FullName
             }               
                на <i>@post.Date</i>
            </div>
            <div class="body">@Html.Raw(post.Body)</div>
        </article>
    }

</section>