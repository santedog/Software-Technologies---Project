@model BlogExersice.Models.Post

@{
    ViewBag.Title = "Details";
}

<h2>Преглед</h2>

<div>
    <h4>Публикация</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Заглавие
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Съдържание
        </dt>

        <dd>
           @Html.Raw(Model.Body)
        </dd>

        <dt>
            Дата
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            Комментари:
        </dt>
        <dd>
            @Html.ActionLink("Преглед на коментарите", "../Comments/Details", new { id = Model.Id })
        </dd>

</dl>
</div>
<p>
    @Html.ActionLink("Промени", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Обратно", "Index") |
    @Html.ActionLink("Добави Коментар", "../Comments/Create")
</p>
